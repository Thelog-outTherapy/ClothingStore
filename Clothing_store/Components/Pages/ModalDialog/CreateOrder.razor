@page "/CreateOrder"
<div class="checkout-container">
    <div class="checkout-box">
        <h2>Оформление заказа</h2>

        <form asp-controller="Order" asp-action="Checkout" method="post">
            <div class="form-row">
                <div class="form-group">
                    <label>Время</label>
                    <input type="time" name="time" required />
                </div>
                <div class="form-group">
                    <label>Дата</label>
                    <input type="date" name="date" required />
                </div>
            </div>

            <input type="text" name="country" placeholder="Страна" required />
            <input type="text" name="city" placeholder="Город" required />
            <input type="text" name="district" placeholder="Район" />
            <input type="text" name="street" placeholder="Улица" required />
            <input type="text" name="apartment" placeholder="Квартира" />

            <div class="total">
                <span>Итого</span>
                <span class="price">799₽</span>
            </div>

            <button type="submit" class="pay-btn">Оплатить</button>
        </form>
    </div>
</div>

