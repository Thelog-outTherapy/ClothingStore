@page "/AdminFeedbacks"
@using DataBase
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer
@inject ApplicationDbContext Ef
<div class="admin-wrapper">
    <div class="admin-layout">
        <aside class="sidebarAdmin">
            <ul class="list-unstyled">
                <li><a href="#" class="menu-item">Логин</a></li>
                <li><a href="http://localhost:5174/adminFeedbacks" class="menu-item">Административная панель</a></li>
                <li><a href="http://localhost:5174/adminProducts" class="menu-item active">Товары</a></li>
                <li><a href="http://localhost:5174/adminCategories" class="menu-item">Категории</a></li>
                <li><a href="http://localhost:5174/adminOrders" class="menu-item">Заказы</a></li>
                <li><a href="http://localhost:5174/adminUsers" class="menu-item">Пользователи</a></li>
                <li><a href="#" class="menu-item">Аналитика</a></li>
            </ul>
        </aside>
    </div>

    @foreach (var item in Ef.Feedbacks
                  .Include(feedback => feedback.Product)
                  .Include(feedback => feedback.User))
    {
        @item.FeedbackId
        @item.UserTable
        @item.User.Username
        @item.Rating
        @item.Comment
        @item.ProductTable
        @item.Product.Category
        @item.Product.ProductType
        @item.Product.ProductName
    
    }
    
    
    <div>
        <h1>Добро пожаловать!</h1>
        <p>Основной контент страницы с фиксированным слайдбаром слева.</p>
    </div>
</div>

